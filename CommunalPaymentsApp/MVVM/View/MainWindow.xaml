<Window x:Class="CommunalPaymentsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunalPaymentsApp"
        xmlns:uc="clr-namespace:CommunalPaymentsApp.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Начальные параметры"
               FontSize="34" Height="100"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <StackPanel Margin="10, 0, 10, 0">
            <uc:SetTextParameterUserControl ParameterText="Кол-во проживающих в помещении:"/>
            <uc:SetBoolParameterUserControl ParameterText="Имеется ли прибор учета по услуге ХВС:"/>
            <uc:SetBoolParameterUserControl ParameterText="Имеется ли прибор учета по услуге ГВС:"/>
            <uc:SetBoolParameterUserControl ParameterText="Имеется ли прибор учета по услуге ЭЭ:"/>
        </StackPanel>
    </StackPanel>
</Window>
